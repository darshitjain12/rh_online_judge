<html lang="en">
<%- include("./partials/head.ejs") %>
<body>
    <%- include("./partials/nav.ejs") %>

    <div>
    <form action="/create" method="POST">
        <label for="title">Problem Name</label>
        <input type="text" id="title" name="title" required>
        <br>
        <label for="problem_statement">Problem Statement</label>
        <textarea id="problem_statement" name="problem_statement" required cols="60" rows="30"></textarea>
        <br>
        <label for="time_limit">Time Limit</label>
        <input type="number" id="time_limit" name="time_limit" defaultValue="2000" required>
        <br>
        <label for="memory_limit">Memory Limit</label>
        <input type="number" id="memory_limit" name="memory_limit" defaultValue="256" required>
        <br>
        <label for="sample_input">Sample Input</label>
        <textarea id="sample_input" name="sample_input" required cols="30" rows="10"></textarea>
        <br>
        <label for="sample_output">Sample Output</label>
        <textarea id="sample_output" name="sample_output" required cols="30" rows="10"></textarea>
        <br>
        <label for="input">Input</label>
        <textarea id="input" name="input" required cols="30" rows="10"></textarea>
        <br>
        <label for="output">Output</label>
        <textarea id="output" name="output" required cols="30" rows="10"></textarea>
        <br>
        <label for="tags">Tags</label>
        <input type="text" id="tags" name="tags" required>
        <br>
        <button>Submit</button>
    </form>
    </div>

    <%- include("./partials/footer.ejs") %>
</body>
</html>